{
    "rules": {
        "indent": [2, "tab"],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "never"],
        "no-console": 1,
        "no-unused-vars": 1,
        "strict": 0
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
    },
    "parserOptions": {
    	"sourceType": "module"
    },
    "globals": {
    	"$": true,
    	"THREE": true
    },
    "extends": "eslint:recommended"
}
