@import 'nib'

global-reset()


notext()
	white-space nowrap
	text-indent -9999px
	overflow hidden

uniform-centerize()
	display flex
	flex-direction column
	justify-content center

//--------------------------------------------------
*, ::after, ::before
	box-sizing: border-box
	outline none

::selection,
::-moz-selection,
::-webkit-selection
	background white

[v-cloak]
	visibility hidden

//--------------------------------------------------
html, body
	width 100%
	height 100%
	overflow hidden

html
	font-family: Helvetica, "游ゴシック体", "Yu Gothic", YuGothic, sans-serif
	font-smoothing antialiased
	-moz-osx-font-smoothing: grayscale
	font-size 10px
	background black

body
	font-size 1.6rem
	background: #222

//--------------------------------------------------

$canvas-margin = 30px

.canvas-wrapper
	position:  absolute;
	top $canvas-margin
	right $canvas-margin
	bottom $canvas-margin
	left $canvas-margin

#canvas
	box-sizing: content-box;
	transform-origin top left
