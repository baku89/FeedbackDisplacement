@import 'nib'

global-reset()


notext()
	white-space nowrap
	text-indent -9999px
	overflow hidden

uniform-centerize()
	display flex
	flex-direction column
	justify-content center

//--------------------------------------------------
*, ::after, ::before
	box-sizing: border-box
	outline none

::selection,
::-moz-selection,
::-webkit-selection
	background white

[v-cloak]
	visibility hidden

//--------------------------------------------------
html, body
	width 100%
	height 100%

html
	font-family: Helvetica, "游ゴシック体", "Yu Gothic", YuGothic, sans-serif
	font-smoothing antialiased
	-moz-osx-font-smoothing: grayscale
	font-size 16px
	background black
