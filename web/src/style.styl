@import 'nib'

global-reset()


notext()
	white-space nowrap
	text-indent -9999px
	overflow hidden

uniform-centerize()
	display flex
	flex-direction column
	justify-content center

//--------------------------------------------------
*, ::after, ::before
	box-sizing: border-box
	outline none

::selection,
::-moz-selection,
::-webkit-selection
	background white

[v-cloak]
	visibility hidden

//--------------------------------------------------
html, body
	width 100%
	height 100%
	overflow hidden

html
	font-family: Helvetica, "游ゴシック体", "Yu Gothic", YuGothic, sans-serif
	font-smoothing antialiased
	-moz-osx-font-smoothing: grayscale
	font-size 10px

body
	font-size 1.6rem
	background: #d9d9d9

//--------------------------------------------------

.center-v,
.center-h
	position absolute
	background cyan
	z-index 10
	opacity .5
	display none

.center-v
	top 0
	left 50%
	width 1px
	height 100%

.center-h
	top 50%
	left 0
	width 100%
	height: 1px

//--------------------------------------------------
// toolbar

$toolbar-width = 80px

.toolbar
	position absolute
	top 0
	left 0
	width $toolbar-width
	height 100%
	background white

//--------------------------------------------------
// easel
.easel
	position absolute
	top 0
	right 0
	bottom 0
	left $toolbar-width


$canvas-margin = 30px

.canvas-wrapper
	position absolute
	top $canvas-margin
	right $canvas-margin
	bottom $canvas-margin
	left $canvas-margin
	cursor none
	// background rgba(255, 0, 0, 0.1)


.brush-cursor
	position relative
	border 1px solid white
	width 30px
	height 30px
	border-radius 50%
	visibility hidden
	z-index 100
	mix-blend-mode difference

	&.show
		visibility visible

#canvas,
#overlay
	position absolute
	top 0
	left 0
	box-sizing content-box
	transform-origin top left

#overlay
	z-index 10
	background #7f7f7f
	mix-blend-mode overlay
